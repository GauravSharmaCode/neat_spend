// For GitHub Codespaces: One-click NeatSpend development environment
{
  "name": "NeatSpend Monorepo - Auto Setup",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "dockerDashComposeVersion": "v2"
    }
  },
  "postCreateCommand": ".devcontainer/setup.sh",
  "postStartCommand": ".devcontainer/start-services.sh",
  "remoteUser": "node",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "runArgs": ["--init"],
  "forwardPorts": [3001, 8080, 5432],
  "portsAttributes": {
    "3001": {
      "label": "User Service",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "NeatSpend API Gateway",
      "onAutoForward": "openPreview"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",
        "ms-vscode.vscode-json",
        "rangav.vscode-thunder-client"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
