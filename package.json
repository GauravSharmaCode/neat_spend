{
  "name": "neatspend-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "NeatSpend microservices monorepo",
  "workspaces": [
    "services/user-service",
    "services/sms-sync-worker"
  ],
  "scripts": {
    "ci": "npm ci",
    "dev:all": "concurrently \"npm run dev:user-service\" \"npm run dev:sms-sync-worker\"",
    "dev:user-service": "npm run dev --workspace=services/user-service",
    "dev:sms-sync-worker": "npm run dev --workspace=services/sms-sync-worker",
    "test:all": "npm run test:user-service && npm run test:sms-sync-worker",
    "test:user-service": "npm run test --workspace=services/user-service",
    "test:sms-sync-worker": "npm run test --workspace=services/sms-sync-worker",
    "test:ci": "npm run test:user-service && npm run test:sms-sync-worker",
    "test:coverage": "npm run test --workspace=services/user-service -- --coverage && npm run test --workspace=services/sms-sync-worker -- --coverage",
    "lint:all": "npm run lint:user-service && npm run lint:sms-sync-worker",
    "lint:user-service": "npm run lint --workspace=services/user-service",
    "lint:sms-sync-worker": "npm run lint --workspace=services/sms-sync-worker",
    "build:all": "npm run build:user-service && npm run build:sms-sync-worker",
    "build:user-service": "npm run build --workspace=services/user-service",
    "build:sms-sync-worker": "npm run build --workspace=services/sms-sync-worker",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all",
    "docker:logs": "docker-compose logs -f",
    "docker:status": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "codespace:setup": ".devcontainer/setup.sh",
    "codespace:start": ".devcontainer/start-services.sh",
    "codespace:health": "curl -f http://localhost:8080/health && curl -f http://localhost:3001/health",
    "status": "scripts/status.sh",
    "db:migrate:user-service": "npm run prisma:migrate --workspace=services/user-service",
    "create-service": "node scripts/create-service.js",
    "test:services": "node scripts/test-services.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.15",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "microservices",
    "monorepo",
    "nodejs",
    "express"
  ],
  "author": "NeatSpend Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gauravsharmacode/neat-spend.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@gauravsharmacode/neat-logger": "^1.0.1"
  }
}

